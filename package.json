{
  "scripts": {
    "dev": "run-p dev:*",
    "dev:backend": "cd backend && cargo watch -x run",
    "dev:frontend": "cd frontend && npm run dev",
    "sqlx:prepare": "cd backend && cargo sqlx prepare",
    "build": "run-s build:frontend build:backend",
    "build:backend": "cd backend && cargo build --release",
    "build:frontend": "cd frontend && pnpm build",
    "docker-build": "pnpm build:frontend && cd backend && cargo zigbuild --target x86_64-unknown-linux-musl --release && cd .. && docker compose build",
    "docker-release": "pnpm docker-build && docker compose push"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
